{% extends './RH/base.html.twig' %}
{% block title %}Absence{% endblock %}
{% block body %}

    <div class="container-fluid">
        <h3 class="text-dark mb-4">Journal de Congé</h3>
        <div class="card shadow">
            <div class="card-header py-3"></div>
            <div class="card-body">
                <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
                    <table class="table my-0" id="dataTable">
                        <thead>
                        <tr>
                            <th>nom</th>
                            <th><strong>type de congé</strong></th>
                            <th>du</th>
                            <th>au</th>
                        </tr>
                        </thead>
                        <tbody>
                         {% for log in congeList %}
                        <tr>
                            <td>{{ log.getPersonnelDemande().getNomPerso() }}</td>
                            <td>{{ log.getCongeDemande().getTypeConge().getTypeConge() }}</td>
                            <td>{{ log.getCongeDemande().getDateDebutConge()|date('Y-m-d') }}</td>
                            <td>{{ log.getCongeDemande().getDateFinConge()|date('Y-m-d') }}</td>
                        </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr></tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}