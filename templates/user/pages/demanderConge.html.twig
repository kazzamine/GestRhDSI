{% extends './user/base.html.twig' %}
{% block title %}demander un congé{% endblock %}
{% block body %}

    <div class="container-fluid">
        <h3 class="text-dark mb-1">Demande congé</h3>
    </div>
    <div class="container">

        <form id="contactForm-2" method="get">
            <div class="row">
                <div class="col-md-6">
                    <div id="successfail"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-lg-11" id="message">
                    <fieldset>
                        <legend></legend>
                    </fieldset>
                    <div class="has-feedback form-group mb-3"><label class="form-label" for="from_name">Debut du congé</label></div><input class="form-control" type="date" id="date_debut" name="date_debut">
                    <div class="has-feedback form-group mb-3"><label class="form-label" for="from_email">Fin du congé</label><input class="form-control" type="date" id="date_fin" name="date_fin"></div>
                    <div class="row">
                        <div class="col-sm-6 col-lg-8">
                            <div class="form-group mb-3"><label class="form-label" for="calltime">type de congé</label><select class="form-select" id="typeconge" name="typeconge">
                                    {% for typeconge in typesconge %}
                                        <option value="{{ typeconge.getId() }}">
                                            {{ typeconge.getTypeConge() }}</option>
                                    {% endfor %}
                                </select></div>
                        </div>
                        <div class="col-sm-6 col-lg-8">
                            <div class="form-group mb-3"><label class="form-label" for="calltime">Reason du congé</label><select class="form-select" id="explication-1" name="explication">
                                    <option value="type1">type1</option>
                                    <option value="type2">type2</option>
                                    <option value="type3">type3</option>
                                </select></div>
                        </div>
                    </div>

                    <div class="form-group mb-3"><button class="btn btn-primary d-block w-100" type="button" id="sendRequest">Envoyer&nbsp;<i class="fa fa-chevron-circle-right"></i></button></div>
                    <hr>
                </div>
            </div>
        </form>
    </div>


{% endblock %}